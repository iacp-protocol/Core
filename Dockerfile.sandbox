FROM python:3.12-slim

WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Déps runtime de la sandbox (httpx est bien dans requirements.txt)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# On a besoin de src/ ET sandbox/
COPY . .

# L'application agent écoute sur 8000 par défaut
EXPOSE 8000

CMD ["python", "-m", "uvicorn", "--app-dir", ".", "sandbox.agents.app:app", "--host", "0.0.0.0", "--port", "8000"]
